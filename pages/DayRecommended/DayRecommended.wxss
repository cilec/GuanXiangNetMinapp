/* pages/DayRecommended/DayRecommended.wxss */

.news-pic {
  display: block;
  /* height: 380rpx; */
  height: 50vh;
  width: 100%;
  position: relative;
  margin: 10rpx 0;
}

.news-pic image {
  height: 100%;
  width: 100%;
  display: block;
}

.news-pic .title {
  font-size: 50rpx;
  width: 100%;
  height: 178rpx;
  line-height: 103rpx;
  color: #fff;
  display: inline-block;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 10;
  padding: 30rpx 31rpx 30rpx 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0) 8%, rgba(0, 0, 0, 0.24) 40%, rgba(0, 0, 0, 0.29) 47%, rgba(0, 0, 0, 0.65) 95%);
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 8%, rgba(0, 0, 0, 0.24) 40%, rgba(0, 0, 0, 0.29) 47%, rgba(0, 0, 0, 0.65) 95%);
  box-sizing: border-box;
}

.news-pic .desc {
  font-size: 30rpx;
  width: 690rpx;
  height: 100rpx;
  line-height: 130rpx;
  color: #eee;
  display: inline-block;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 11;
  padding-left: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}

.topDate {
  font-size: 0.8rem;
  text-align: center;
}
