<!--pages/DayRecommended/DayRecommended.wxml-->

<navigator wx:for="{{articles}}" wx:key="{{id}}" class='news-pic' url='../details/details?id={{item.id}}'>
  <image mode='aspectFill' src='{{item.cover}}'></image>
  <text class='title'>{{item.title}}</text>
  <text class='desc'>{{item.description}}</text>
</navigator>
